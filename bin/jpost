#!/bin/bash
#/ Usage: jpost <post title>
#/
#/ Eg:
#/   jpost Hello World
#/   jpost 'This is my new blog post!'
#/
#/ Requires jekyll.vim
#/   - https://github.com/itspriddle/vim-jekyll

usage() {
  grep '^#/' <"$0" | cut -c4-
  exit 0
}

if [[ $# -lt 1 ]]; then
  usage
fi

cat <<CMD | mvim -s /dev/stdin
:Jpost! $*
G
CMD

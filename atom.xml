---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <id>{{ site.url }}/</id>
  <title>{{ site.title }}</title>
  <link href="{{ site.url }}/atom.xml" rel="self" type="application/atom+xml"/>
  <link href="{{ site.url }}/" rel="alternate" type="text/html"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <author>
    <name>{{ site.author }}</name>
    {% if site.email %}<email>{{ site.email }}</email>{% endif %}
  </author>

  {% for post in site.posts limit: 20 %}
  <entry>
    <title>{{ post.title }}</title>
    <link href="{% if post.link %}{{ post.link }}{% else %}{{ site.url }}{{ post.url }}{% endif %}"/>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <id>{{ site.url }}{{ post.id }}</id>
    <content type="html">{{ post.content | expand_urls: site.url | xml_escape }}</content>
  </entry>
  {% endfor %}
</feed>
